<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/content_main_id"
    android:background="@color/main_screen_background">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/id_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:fontFamily="@font/roboto_black"
        android:textColor="@color/temp_color"
        android:textSize="@dimen/temp_font_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:text="20.7" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:layout_toEndOf="@id/id_temp"
        android:layout_toRightOf="@id/id_temp"
        android:fontFamily="@font/roboto_black"
        android:textColor="@color/temp_color"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/id_temp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:text="o"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/id_location"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:layout_below="@id/id_temp"
        android:layout_marginBottom="62dp"
        android:fontFamily="@font/roboto_thin"
        android:textColor="@color/location_color"
        android:textSize="@dimen/location_font_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/id_temp"
        app:layout_constraintVertical_bias="0.0"
        tools:text="Bangalore" />

</androidx.constraintlayout.widget.ConstraintLayout>
